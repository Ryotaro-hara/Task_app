<main>
    <h3>スケジュール詳細</h3>
    
    <table>
        <tr>
            <th>タイトル</th>
            <td><%= @schedule.title %></td>
        </tr>
        <tr>
            <th>開始日</th>
            <td><%= @schedule.start_at %></td>
        </tr>
        <tr>
            <th>投稿日時</th>
            <td><%= @schedule.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <tr>
            <th>終日</th>
            <td>
                <% if @schedule.all_day == true %>
                ○
                <% else @schedule.all_day == false %> 
                
                <% end %>
            </td>
        </tr>
        <tr>
            <th>スケジュールメモ</th>
            <td><%= @schedule.memo %></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%= link_to "スケジュール一覧に戻る", :schedules %></li>
        </ul>
        <ul>
            <li><%= link_to "スケジュールを編集する", "/schedules/#{@schedule.id}/edit" %></li>
        </ul>
        <ul>
            <li><%= link_to "スケジュールを削除する", "/schedules/#{@schedule.id}", method: :delete , data:{confirm: "本当に削除差ますか？"} %></li>
        </ul>
    </div>
</main>
<%= render "shared/partial" %>